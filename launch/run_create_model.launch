<launch> 
  <arg name="real_camera" default="false"/>
  <group if="$(arg real_camera)">

    <!--For kinect 2 on head of baxter-->
    <!--arg name="camera_link_pose" default="0.227452 -0.0841643 0.87455 0.69823 -0.678333 0.149447 -0.185532"/-->

    <!--For kinect 2 on support in front of crustcrawler-->
    <arg name="camera_link_pose" default="0.95 0.1 0.73 0.603601 0.590586 -0.36625 -0.382251"/>

    <node name="statict_transform" pkg="tf" type="static_transform_publisher" args=" $(arg camera_link_pose) /base /kinect2_link 100"/> 
  </group>

  <rosparam command="load" file="$(find static_object_position_tracking)/src/params.yaml"/>
   <rosparam command="load" file="$(find static_object_position_tracking)/launch/params/parameters.yaml"/>

  <node name="create_model_node" pkg="static_object_position_tracking" type="create_model"  output="screen"/> 
</launch>
